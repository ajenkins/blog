---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article>
  <header>
    <h1>{{ title }}</h1>
    {% if subtitle %}<p class="subtitle">{{ subtitle }}</p>{% endif %}
    <time datetime="{{ page.date.toISOString() }}">
      {{ page.date.toDateString() }}
    </time>
  </header>
  {{ content | safe }}
</article>

<p><a href="{{ '/' | url }}">Back to Home</a></p>