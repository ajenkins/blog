<article>
  <header>
    <h1>{{ title }}</h1>
    {% if subtitle %}<p class="subtitle">{{ subtitle }}</p>{% endif %}
    <time datetime="{{ page.date.toISOString() }}">
      {{ page.date | formatDate }}
    </time>
  </header>
  {{ content | safe }}
  <hr>
  {% footnotes %}
</article>

{% include 'comments.njk' %}

<p><a href="{{ '/' | url }}">More posts</a></p>